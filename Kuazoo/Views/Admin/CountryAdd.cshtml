@model com.kuazoo.Models.CountryModel
@{
    ViewBag.Title = "Country Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(10);
        
        
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        <a href="Country">Country</a> <span class="active"> / Add Country</span>
        @{
            if (ViewBag.result != null)
            {
                if (ViewBag.result == "1")
                {
                    <div class="notif csuccess"><div class="notifwrap success"><strong>Success:</strong> New Country successfully created</div></div>
                }
                else if (ViewBag.result == "3")
                {
                    <div class="notif cerror"><div class="notifwrap error"><strong>Error:</strong> Failed Create New Country</div></div>
                }
                else
                {
                    <div class="notif cwarning"><div class="notifwrap warning"><strong>Warning:</strong> @ViewBag.result</div></div>
                }
            }
        }
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>Add Country</h1>
    </div>
        @using (Html.BeginForm())
        {
    <div id="wrap">
            <div>
                <div class="colleft">@Html.LabelFor(model => model.CountryName)</div>
                <div class="colright">@Html.TextBoxFor(model => model.CountryName, new { @class = "long" })@Html.ValidationMessageFor(model => model.CountryName)</div>
            </div>
    </div>
            <div class="wrapend">
                <div class="colleft"></div>
                <div class="colright">
                    <input type="submit" value="Submit" class="submitBtn"/>
                    <a href="Location#country"><input type="button" value="Cancel" class="grayBtn"/></a>
                </div>
            </div>
        }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#CountryName").focus();
    });
</script>