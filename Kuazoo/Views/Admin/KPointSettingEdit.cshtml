@model com.kuazoo.Models.PointActionModel
@{
    ViewBag.Title = "K-Point Setting Edit";
    Layout = "~/Views/Shared/_AdminSettingLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(1);
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        <a href="KPointSetting">K-Point Setting</a> <span class="active"> / Edit K-Point Setting</span>
        @{
            if (ViewBag.result != null)
            {
                if (ViewBag.result == "1")
                {
                    <div class="notif csuccess"><div class="notifwrap success"><strong>Success:</strong> K-Point Setting updated successfully</div></div>
                }
                else if (ViewBag.result == "3")
                {
                    <div class="notif cerror"><div class="notifwrap error"><strong>Error:</strong> Failed Update New K-Point Setting</div></div>
                }
                else
                {
                    <div class="notif cwarning"><div class="notifwrap warning"><strong>Warning:</strong> @ViewBag.result</div></div>
                }
            }
        }
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>Edit K-Point Setting</h1>
    </div>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.PointActionId)
            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.Description)
    <div id="wrap">
            <div>
                <div class="colleft">@Html.LabelFor(model => model.Description)</div>
                <div class="colright">@Model.Description</div>
            </div>
            <div>
                <div class="colleft">@Html.LabelFor(model => model.Amount)</div>
                <div class="colright">@Html.TextBoxFor(model => model.Amount)@Html.ValidationMessageFor(model => model.Amount)</div>
            </div>
    </div>  
            <div class="wrapend">
                <div class="colleft"></div>
                <div class="colright">
                    <input type="submit" value="Submit" class="submitBtn" onclick="return UpdateConf()"/>
                    <a href="KPointSetting"><input type="button" value="Cancel" class="grayBtn"/></a>
                </div>
            </div>  
        }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#Amount").focus();
    });
    function UpdateConf() {
        var r = confirm("Confirm update K-Point Setting details?");
        if (r == true) return true;
        else return false;
    }
</script>