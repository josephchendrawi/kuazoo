@model com.kuazoo.Models.AdminModel2
@{
    ViewBag.Title = "Admin Edit";
    Layout = "~/Views/Shared/_AdminSettingLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(3);
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        <a href="Admin">Admin</a> <span class="active"> / Edit Admin</span>
        @{
            if (ViewBag.result != null)
            {
                if (ViewBag.result == "1")
                {
                    <div class="notif csuccess"><div class="notifwrap success"><strong>Success:</strong> Admin updated successfully</div></div>
                }
                else if (ViewBag.result == "3")
                {
                    <div class="notif cerror"><div class="notifwrap error"><strong>Error:</strong> Failed Update New Admin</div></div>
                }
                else
                {
                    <div class="notif cwarning"><div class="notifwrap warning"><strong>Warning:</strong> @ViewBag.result</div></div>
                }
            }
        }
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>Edit Admin</h1>
    </div>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.AdminId) 
    <div id="wrap">
            <div>
                <div class="colleft">@Html.LabelFor(model => model.FirstName)</div>
                <div class="colright">@Html.TextBoxFor(model => model.FirstName, new { @class = "long" })@Html.ValidationMessageFor(model => model.FirstName)</div>
            </div>
            <div>
                <div class="colleft">@Html.LabelFor(model => model.LastName)</div>
                <div class="colright">@Html.TextBoxFor(model => model.LastName, new { @class = "long" })@Html.ValidationMessageFor(model => model.LastName)</div>
            </div>
            @if (Model.Email == "superadmin")
            {
            <div>
                <div class="colleft">@Html.LabelFor(model => model.Email)</div>
                <div class="colright">@Html.TextBoxFor(model => model.Email, new { @class = "long",@readonly =true })@Html.ValidationMessageFor(model => model.Email)</div>
            </div>
            }
            else
            {
            <div>
                <div class="colleft">@Html.LabelFor(model => model.Email)</div>
                <div class="colright">@Html.TextBoxFor(model => model.Email, new { @class = "long" })@Html.ValidationMessageFor(model => model.Email)</div>
            </div>
            }
    </div>  
            <div class="wrapend">
                <div class="colleft"></div>
                <div class="colright">
                    <input type="submit" value="Submit" class="submitBtn" onclick="return UpdateConf()"/>
                    <a href="Admin"><input type="button" value="Cancel" class="grayBtn"/></a>
                </div>
            </div>  
        }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#FirstName").focus();
    });
    function UpdateConf() {
        var r = confirm("Confirm update Admin details?");
        if (r == true) return true;
        else return false;
    }
</script>