@model com.kuazoo.Models.InventoryItemModel.Image
@{
    ViewBag.Title = "Image Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/fancy/jquery.fancybox.css")">
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(7);
        $('.fancybox').fancybox();
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        <a href="Image">Image</a> <span class="active"> / Edit Image</span>
        @{
            if (ViewBag.result != null)
            {
                if (ViewBag.result == "1")
                {
                    <div class="notif csuccess"><div class="notifwrap success"><strong>Success:</strong> Image updated successfully</div></div>
                }
                else if (ViewBag.result == "3")
                {
                    <div class="notif cerror"><div class="notifwrap error"><strong>Error:</strong> Failed Update New Image</div></div>
                }
                else
                {
                    <div class="notif cwarning"><div class="notifwrap warning"><strong>Warning:</strong> @ViewBag.result</div></div>
                }
            }
        }
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>Edit Image</h1>
    </div>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.ImageId);
            @Html.HiddenFor(model => model.Name);
            @Html.HiddenFor(model => model.Url);
    <div id="wrap">
            <div>
                <div class="colleft">@Html.LabelFor(model => model.Name)</div>
                <div class="colright">
                    @if (Model.Url != null && Model.Url != "")
                    {
                    <a class="fancybox" style="float:left" href="@Model.Url"><img src="@Model.Url" class="imgThumb" /></a>
                    }
                </div>
                <div class="colright" style="display:table;width:150px;">
                    <input id="uploadFile" placeholder="Choose File" readonly="readonly" class="file-upload-text" />
                    <div class="file-upload">
                        <span>Browse</span>
	                    <input id="imageUpload" type="file" name="imageUpload" />
                    </div>
                </div>
            </div>
            <br />
    </div> 
            <div class="wrapend">
                <div class="colleft"></div>
                <div class="colright"><input type="submit" value="Submit" class="submitBtn" onclick="return UpdateConf()"/></div>
            </div>  
        }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#Url").focus();
    });
    function UpdateConf() {
        var r = confirm("Confirm update Image details?");
        if (r == true) return true;
        else return false;
    }
</script>