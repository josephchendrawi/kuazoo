@model com.kuazoo.Models.TransactionModel.TransactionDetail
@{
    ViewBag.Title = "Transaction View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/fancy/jquery.fancybox.css")">
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(9);
        $('.fancybox').fancybox();
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        <a href="Transaction">Transaction</a> /  <span class="active"> / View Transaction</span>
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>View Transaction</h1>
    </div>
    <div id="wrap">
    <div class="colright">
        <h1>Inventory Item Details</h1>
    </div>
        <div class="colright">
            <div class="colhalf">
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.MerchantId)</div>
                    <div class="colright">@Model.InventoryItem.MerchantName</div>
                </div>
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.Name)</div>
                    <div class="colright">@Model.InventoryItem.Name</div>
                </div>
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.InventoryItemTypeId)</div>
                    <div class="colright">@Model.InventoryItem.InventoryItemTypeName</div>
                </div>  
            </div>
            <div class="colhalf">
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.Price)</div>
                    <div class="colright">@Model.InventoryItem.Price</div>
                </div>
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.Discount)</div>
                    <div class="colright">@Model.InventoryItem.Discount % </div>
                </div>   
                <div>
                    <div class="colleft">Discounted Price</div>
                    <div class="colright">@{var diprice = Model.InventoryItem.Price - (Model.InventoryItem.Price * Model.InventoryItem.Discount / 100);<text>@diprice</text>}</div>
                </div> 
            </div>
        </div>
        <div class="colright">
            <div class="colhalf">
                <div>
                    <div class="colleft" style="vertical-align:top">@Html.LabelFor(model => model.InventoryItem.Description)</div>
                    <div class="colright">@Model.InventoryItem.Description</div>
                </div>
                <div>
                    <div class="colleft">Tag</div>
                    <div class="colright">@Model.InventoryItem.TagName</div>
                </div>     
                <div>
                    <div class="colleft" style="vertical-align:top">Image</div>
                    <div class="colright">
                        @if (Model.InventoryItem.ImageUrl != null && Model.InventoryItem.ImageUrl != "")
                        {
                        <a class="fancybox" style="float:left" href="@Model.InventoryItem.ImageUrl"><img src="@Model.InventoryItem.ImageUrl" class="imgThumb" /></a>
                        }
                    </div>
                </div>
                @*<div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.Keyword)</div>
                    <div class="colright">@Html.TextBoxFor(model => model.InventoryItem.Keyword)@Html.ValidationMessageFor(model => model.InventoryItem.Keyword)</div>
                </div>   *@   
            </div>
            <div class="colhalf">
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.ExpireDate)</div>
                    <div class="colright">@string.Format("{0:dd MMM yyyy}", Model.InventoryItem.ExpireDate) </div>
                </div>  
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.MaximumSales)</div>
                    <div class="colright">@Model.InventoryItem.MaximumSales</div>
                </div>  
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.PublishDate)</div>
                    <div class="colright">@string.Format("{0:dd MMM yyyy hh:mm tt}", Model.InventoryItem.PublishDate)</div>
                </div> 
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.MinimumTarget)</div>
                    <div class="colright">@Model.InventoryItem.MinimumTarget</div>
                </div>  
                <div>
                    <div class="colleft">@Html.LabelFor(model => model.InventoryItem.Flag)</div>
                    <div class="colright">@Model.InventoryItem.Flag</div>
                </div> 
            </div>
        </div>
    </div>

    <div id="wrap">
    <div class="colright">
        <h1>Member Details</h1>
    </div>
    <div class="colright">
        <div>
            <div class="colleft">@Html.LabelFor(model => model.Member.FirstName)</div>
            <div class="colright">@Model.Member.FirstName</div>
        </div>
        <div>
            <div class="colleft">@Html.LabelFor(model => model.Member.LastName)</div>
            <div class="colright">@Model.Member.LastName</div>
        </div>
        <div>
            <div class="colleft">@Html.LabelFor(model => model.Member.Email)</div>
            <div class="colright">@Model.Member.Email</div>
        </div>
        <div>
            <div class="colleft">@Html.LabelFor(model => model.Member.Gender)</div>
            <div class="colright">@if (Model.Member.Gender == 0)
                                  { <text>Male</text> }
                                  else { <text>Female</text>}</div>
        </div>
        <div>
            <div class="colleft">@Html.LabelFor(model => model.Member.DateOfBirth)</div>
            <div class="colright">@string.Format("{0:dd MMM yyyy}", Model.Member.DateOfBirth) </div>
        </div>
        <div>
            <div class="colleft">@Html.LabelFor(model => model.Member.MemberStatus)</div>
            <div class="colright">@Model.Member.MemberStatus.MemberStatusName</div>
        </div>
    </div>
    </div>
    <div class="wrapend">
        <div class="colleft"></div>
        <div class="colright">
        <a href="Transaction" class="grayBtn">Back</a></div>
    </div>

</div>
