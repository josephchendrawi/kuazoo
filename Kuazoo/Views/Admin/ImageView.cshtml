@model com.kuazoo.Models.InventoryItemModel.Image
@{
    ViewBag.Title = "Image View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/fancy/jquery.fancybox.css")">
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(7);
        $('.fancybox').fancybox();
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        <a href="Image">Image</a> <span class="active"> / View Image</span>
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>View Image</h1>
    </div>
    <div id="wrap">
        <div>
            <div class="colleft">@Html.LabelFor(model => model.Url)</div>
            <div class="colright">
                @if (Model.Url != null && Model.Url != "")
                {
                <a class="fancybox" style="float:left" href="@Model.Url"><img src="@Model.Url" class="imgThumb" /></a>
                }
            </div>
        </div>
    </div>
            <div class="wrapend">
            <div class="colleft"></div>
            <div class="colright"><a href="ImageEdit?ImageId=@Model.ImageId" class="submitBtn">Edit</a>
            <a href="Image" class="grayBtn">Back</a></div>
        </div>
</div>