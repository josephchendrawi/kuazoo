@model com.kuazoo.Models.TransactionModel.TempTransaction
@{
    ViewBag.Title = "Temp Transaction";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        @{
            if (ViewBag.result != null)
            {
                if (ViewBag.result == "1")
                {
                    <div class="notif csuccess"><div class="notifwrap success"><strong>Success:</strong> New tag successfully created</div></div>
                }
                else if (ViewBag.result == "3")
                {
                    <div class="notif cerror"><div class="notifwrap error"><strong>Error:</strong> Failed Create New Transaction</div></div>
                }
                else
                {
                    <div class="notif cwarning"><div class="notifwrap warning"><strong>Warning:</strong> @ViewBag.result</div></div>
                }
            }
        }
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>Add Transaction</h1>
    </div>
        @using (Html.BeginForm())
        {
    <div id="wrap">
            <div>
                <div class="colleft">Inventory Item</div>
                <div class="colright">
                                    @(Html.Kendo().DropDownListFor(model => model.InventoryItemId)
                                        .HtmlAttributes(new { style = "width: 400px" })
                                        .OptionLabel("--Select Item--")
                                        .DataTextField("Name")
                                        .DataValueField("InventoryItemId")
                                        .DataSource(source =>
                                        {
                                            source.Read(read =>
                                            {
                                                read.Action("InventoryItemList", "Admin");
                                            });
                                        })
                                    )
                                    @Html.ValidationMessageFor(model => model.InventoryItemId)
                </div>
            </div>  
            <div>
                <div class="colleft">Member</div>
                <div class="colright">
                                    @(Html.Kendo().DropDownListFor(model => model.MemberId)
                                        .HtmlAttributes(new { style = "width: 400px" })
                                        .OptionLabel("--Select Member--")
                                        .DataTextField("Email")
                                        .DataValueField("MemberId")
                                        .DataSource(source =>
                                        {
                                            source.Read(read =>
                                            {
                                                read.Action("MemberList", "Admin");
                                            });
                                        })
                                    )
                                    @Html.ValidationMessageFor(model => model.InventoryItemId)
                </div>
            </div>  
    </div> 
            <div class="wrapend">
                <div class="colleft"></div>
                <div class="colright"><input type="submit" value="Submit" class="submitBtn"/></div>
            </div>
        }
</div>