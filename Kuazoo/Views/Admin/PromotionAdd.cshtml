@model com.kuazoo.Models.InventoryItemModel.Promotion
@{
    ViewBag.Title = "Promotion Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(11);
        
        
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        <a href="Promotion">Promo Code</a> <span class="active"> / Add Promotion Code</span>
        @{
            if (ViewBag.result != null)
            {
                if (ViewBag.result == "1")
                {
                    <div class="notif csuccess"><div class="notifwrap success"><strong>Success:</strong> New promotion successfully created</div></div>
                }
                else if (ViewBag.result == "3")
                {
                    <div class="notif cerror"><div class="notifwrap error"><strong>Error:</strong> Create new promotion unsuccessful.</div></div>
                }
                else
                {
                    <div class="notif cwarning"><div class="notifwrap warning"><strong>Warning:</strong> @ViewBag.result</div></div>
                }
            }
        }
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>Add Promotion Code</h1>
    </div>
        @using (Html.BeginForm())
        {
    <div id="wrap">
            <div>
                <div class="colleft">@Html.LabelFor(model => model.PromoCode)</div>
                <div class="colright">@Html.TextBoxFor(model => model.PromoCode, new { @class = "long" })@Html.ValidationMessageFor(model => model.PromoCode)</div>
            </div>
            <div>
                <div class="colleft">@Html.LabelFor(model => model.PromoType)</div>
                <div class="colright">
                                    @(Html.Kendo().DropDownListFor(model => model.PromoType)
                                        .HtmlAttributes(new { style = "width: 250px" })
                                        .OptionLabel("--Select Type--")
                                        .DataTextField("Text")
                                        .DataValueField("Value")
                                          .BindTo(new List<SelectListItem>() {
                                              new SelectListItem() {
                                                  Text = "Discount by %",
                                                  Value = "1"
                                              },
                                              new SelectListItem() {
                                                  Text = "Discount by Fixed Value",
                                                  Value = "2"
                                              }
                                          })
                                    )

                                        @Html.ValidationMessageFor(model => model.PromoType)
                </div>
            </div>  
            <div>
                <div class="colleft">@Html.LabelFor(model => model.PromoValue)</div>
                <div class="colright">@Html.TextBoxFor(model => model.PromoValue, new { @class = "long" })@Html.ValidationMessageFor(model => model.PromoValue)</div>
            </div>
            <div>
                <div class="colleft">@Html.LabelFor(model => model.ValidDate)</div>
                <div class="colright">
                    @(Html.Kendo().DatePickerFor(model => model.ValidDate)
                        .HtmlAttributes(new { @class = "w200" })
                        .Value(DateTime.Now)
                        .Format("dd MMM yyyy")
                    )
                    @Html.ValidationMessageFor(model => model.ValidDate)</div>
            </div>
            <div>
                @*<div class="colleft">@Html.LabelFor(model => model.Flag)</div>*@
                <div class="colright">@Html.CheckBoxFor(model => model.Flag, new { @checked = "checked", @style = "visibility:hidden"})@Html.ValidationMessageFor(model => model.Flag)</div>
            </div>
    </div> 
            <div class="wrapend">
                <div class="colleft"></div>
                <div class="colright">
                    <input type="submit" value="Submit" class="submitBtn"/>
                    <a href="Promotion"><input type="button" value="Cancel" class="grayBtn"/></a>
                </div>
            </div>
        }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#PromoCode").focus();
    });
</script>