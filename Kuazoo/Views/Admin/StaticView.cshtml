@model com.kuazoo.Models.StaticModel
@{
    ViewBag.Title = "Static Setting View";
    Layout = "~/Views/Shared/_AdminSettingLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(2);
    });
</script>
<div id="breadcrumbs">
    <div class="mainwrap">
        <a href="Static">Static Setting</a> <span class="active"> / View Static Setting</span>
        @{
            if (ViewBag.result != null)
            {
                if (ViewBag.result == "1")
                {
                    <div class="notif csuccess"><div class="notifwrap success"><strong>Success:</strong> Static Setting updated successfully</div></div>
                }
                else if (ViewBag.result == "3")
                {
                    <div class="notif cerror"><div class="notifwrap error"><strong>Error:</strong> Failed Update New Static Setting</div></div>
                }
                else
                {
                    <div class="notif cwarning"><div class="notifwrap warning"><strong>Warning:</strong> @ViewBag.result</div></div>
                }
            }
        }
    </div>
</div>
<div id="main">
    <div id="mainwrap">
        <h1>View Static Setting</h1>
    </div>
    <div id="wrap">
            <div>
                <div class="colleft">@Html.LabelFor(model => model.Name)</div>
                <div class="colright">@Model.Name</div>
            </div>
            <div>
                <div class="colleft">@Html.LabelFor(model => model.Description)</div>
                <div class="colright">@Model.Description</div>
            </div>
    </div>  
            <div class="wrapend">
            <div class="colleft"></div>
            <div class="colright"><a href="StaticEdit?StaticId=@Model.StaticId" class="submitBtn">Edit</a>
            <a href="Static" class="grayBtn">Back</a></div>
        </div>
</div>
