<div class="winfooter">
@if (Model.Total > 0)
{
    int currpage = ViewBag.currPage;
    string currsort = ViewBag.currSort;
    int page = (Model.Total / 6) + 1;
    <ul class="pagination">
      @if (currpage == 1)
      {
      <li class="disabled"><a href="">&laquo;</a></li>
      }
      else
      {
      <li><a href="@Url.Action("WinnersCircle", "Home", new { sort = currsort, page = 1 })">&laquo;</a></li>
      }
      @for (int i = 1; i <= page; i++)
      {
          if (currpage == i)
          {
            <li class="active"><a href="@Url.Action("WinnersCircle", "Home", new { sort = currsort, page = i })">@i</a></li>
          }
          else
          {
            <li><a href="@Url.Action("WinnersCircle", "Home", new { sort = currsort, page = i })">@i</a></li>
          }
      }
      @if (currpage == page)
      {
      <li class="disabled"><a href="">&raquo;</a></li>
      }
      else
      {
      <li><a href="@Url.Action("WinnersCircle", "Home", new { sort = currsort, page = page })">&raquo;</a></li>
      }
    </ul>
}
</div>
