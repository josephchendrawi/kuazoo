            $("#gweek").removeClass("active");
            $("#gmonth").removeClass("active");
            $("#g"+v).addClass("active");
            window.location="@Url.Action("WinnersCircle","Home")"+"?sort="+v;
        }
        function shareFB(name,imgurl,title) {
            FB.ui(
            {
                method: 'feed',
                name: name,
                link: document.URL,
                picture: imgurl,
                caption: 'Prize '+title,
                description: '',
                message: ''
            });
        }
    </script>

}

