<script type="text/javascript">
    $(document).ready(function(){
        var country=$("#tcountry").val();
        if(country.length>3){
            countrychange(country,"");
        }
        else
        {
             $("#tstate").kendoComboBox({
                dataTextField: "StateName",
                dataValueField: "StateName",
                filter: "contains",
                suggest: true,
                minLength: 2,
                dataSource: {
                    type: "json",
                    serverFiltering: false,
                    transport: {
                        read: {
