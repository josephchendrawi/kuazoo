                $("#tlastname").val(ship.ln);
                $("#taddress1").val(ship.ad1);
                $("#taddress2").val(ship.ad2);
                $("#tcity").val(ship.city);
                $("#tcountry").val(ship.country);
                countrychange(ship.country,ship.state);
                $("#tstate").val(ship.state);
                $("#tzipcode").val(ship.zip);
                $("#tphone").val(ship.ph);
            }
